extends ../../layouts/default.pug
include ../../mixins/search.pug

block main 
    h1 Danh sách xe

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body
            .row
                .col-6
                    button(class="btn btn-sm ml-1 btn-outline-success active") Tất cả
                .col-6
                    +search(keyword)


    .card.mb-3 
        .card-header Danh sách xe 
            .car-body
                table.table.table-hover.table-sm 
                    thead   
                        tr 
                            th STT 
                            th Hình ảnh
                            th Hãng xe  
                            th Tên xe 
                            th Phiên bản
                            th Giá
                            th Hành động
                    tbody
                        each car, index in Car_items   
                            tr
                                td #{index+1}
                                td 
                                    img(src=car.imageUrl[0] alt=car.version width="100px" height="auto")
                                td #{car.brand}
                                td #{car.name}
                                td #{car.version}
                                td #{car.price}
                                td  
                                    button(class="btn btn-warning btn-sm") Sửa
                                    button(class="btn btn-danger btn-sm") Xóa


    nav     
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage-1
                    ) Trang trước
            - for (var i = pagination.currentPage-1; i <= pagination.currentPage+1; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(
                        class="page-link"
                        button-pagination=i
                    ) #{i}
            if(pagination.currentPage < totalPage)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage+1
                    ) Kế tiếp
           

